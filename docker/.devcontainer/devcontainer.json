// For format details, see https://aka.ms/devcontainer.json
{
	"name": "Aeon Mecha (dev-container)",
	"dockerComposeFile": "../image/docker-compose-dev.yml",
	// Add the IDs of extensions you want installed when the container is created.
	"extensions": [
		"ms-python.python",
		"ms-python.vscode-pylance",
		"ms-toolsai.jupyter",
		"ms-toolsai.jupyter-renderers",
		"visualstudioexptteam.vscodeintellicode",
		"cweijan.vscode-mysql-client2"
	],
	"features": {
		"github": "latest"
	},
	"service": "aeon_dev",
	// Set *default* container specific settings.json values on container create.
	"settings": {
		"[python]": {
			"editor.formatOnSave": true
		},
		"jupyter.generateSVGPlots": true,
		"python.condaPath": "/opt/local/conda/bin/conda",
		"python.defaultInterpreterPath": "/opt/local/conda/envs/aeon_env/bin/python",
		"python.formatting.blackArgs": [
			"--line-length=88"
		],
		"python.formatting.provider": "black",
		"python.languageServer": "Pylance",
		"python.linting.enabled": true,
		"python.linting.flake8Args": [
			"--max-line-length=88",
			"--extend-ignore=E203"
		],
		"python.linting.flake8Enabled": true,
		"python.linting.pylintEnabled": false,
		"python.sortImports.args": [
			"--profile",
			"black"
		],
		"python.terminal.activateEnvInCurrentTerminal": true,
		"python.terminal.activateEnvironment": true
	},
	"shutdownAction": "stopCompose",
	"userEnvProbe": "loginInteractiveShell",
	"workspaceFolder": "/home/aeon_db/aeon_mecha_dev"
}
